{
  "moduleFileExtensions": ["js", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRunner": "jest-circus/runner",
  "testRegex": ".(test|spec).ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "verbose": true,
  "bail": true,
  "testPathIgnorePatterns": ["/node_modules/", "files"]
}
